<script>

    var lists = new Array();
    
    var cm = new Vue({
        el: '#app3',
        data: {
            lists: lists,
        },
        methods: {
            load: function () {
                $.ajax({
                    type: 'Get',
                    url: "/api/Interface/GetUser",
                    timeout: 10000,
                    success: successFunc,
                    error: errorFunc
                });

                function successFunc(data) {
                    //alert(data[0].Name);
                    cm.lists = data;
                }
                function errorFunc(xhr) {

                    alert(xhr.textStatus);
                }

            },
            pickpoint: function (item) {

            }
        }
    });
    cm.load();
</script>